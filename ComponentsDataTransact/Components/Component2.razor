@using System.ComponentModel.DataAnnotations
<h3>Component2</h3>

<div>@Text</div>
<div>@initialValue</div>

@code {
 private String Text { get; set; }
    
 [Parameter]
 public String initialValue { get; set; }

    protected override void OnInitialized()
    {
        Text = initialValue;
    }

    private void OnDataChanged(String text)
    {
        Text = text;
        StateHasChanged();
    }

}
